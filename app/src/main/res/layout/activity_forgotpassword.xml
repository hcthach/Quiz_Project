<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="732dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="1dp">

        <!-- TextView tiêu đề-->
        <TextView
            android:id="@+id/TxtTieuDe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Khôi phục mật khẩu"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <!-- Edit nhập mật khẩu mới-->
        <EditText
            android:id="@+id/EditMK"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_below="@+id/TxtTieuDe"
            android:layout_marginStart="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_btn"
            android:paddingStart="6dp"
            android:hint="Mật khẩu mới"
            android:inputType="textWebPassword"/>

        <!-- Edit nhập lại mật khẩu-->
        <EditText
            android:id="@+id/EditMK2"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_below="@+id/EditMK"
            android:layout_marginStart="45dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/border_btn"
            android:paddingStart="6dp"
            android:hint="Nhập lại mật khẩu"
            android:inputType="textWebPassword"/>

        <!-- Button Xác nhận-->
        <Button
            android:id="@+id/BtnDK"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_below="@+id/EditMK2"
            android:layout_marginStart="45dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/border_btn"
            android:fontFamily="sans-serif-condensed"
            android:onClick="onXacNhanClick"
            android:text="Xác nhận"
            android:textSize="24sp" />





    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>